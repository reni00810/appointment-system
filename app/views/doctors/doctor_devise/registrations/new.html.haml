%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :name
    %br/
    = f.text_field :name, required: true
  .field
    = f.label :email
    %br/
    = f.email_field :email
  .field
    = f.label :phone
    %br/
    = f.text_field :phone, required: true
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  .field
    = f.label :gender
    = f.radio_button :gender, 'M', checked: true , class: "radio-custom" , id: "radio-1"
    %label.radio-custom-label{for: "radio-1"} Male
    = f.radio_button :gender, 'F', checked: false, class: "radio-custom" , id: "radio-1"
    %label.radio-custom-label{for: "radio-1"} Female
  .field
    = f.label :qualification
    %br
    = f.text_field :qualification, required: true
  .field
    = f.label :address
    %br
    = f.text_area :address
  .actions
    = f.submit "Sign up"
= render "doctors/doctor_devise/shared/links"
