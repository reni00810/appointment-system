.col-md-12
  = form_for(@appointment, url: @appointment.new_record? ? patients_appointments_path : patients_appointment_path(@appointment.id)) do |f|
    .row
      .col
        %label Doctor
        = f.select :doctor_id , Doctor.all.collect {|d| [d.name, d.id]}, {prompt: 'Select Doctor'}, class: 'form-control'
      .col
        = f.label :date
        = f.date_field :date, class: 'form-control'
      .col
        = f.label :time
        = f.time_field :time, class: 'form-control'
    .row
      .col
        = f.label :description
        = f.text_area :description, class: 'form-control'
    %br
    .row
      .col
        = f.submit "Save", class: 'btn btn-primary'
